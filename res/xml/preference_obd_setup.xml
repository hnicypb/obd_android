<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:title="报警设置" >  
		<CheckBoxPreference   
		    android:key="TourbleCode"   
		    android:title="故障报警"   
		    android:summary="当前车辆出现故障是自动报警，建议开启该功能"  
		    android:defaultValue="true" >  
		 </CheckBoxPreference>  	    
		 
		<ListPreference   
		     android:key="AlarmWaterTemp"   
		     android:title="水温报警"	
		     android:summary="当前车辆水箱温度超过设定值，报警提醒"  
		     android:dialogTitle="水温报警值"   
		     android:defaultValue="100"
		     android:entries="@array/WaterTempAlarmTitle"   
		     android:entryValues="@array/WaterTempAlarmValue">  
		</ListPreference>  
		
		<ListPreference   
		     android:key="AlarmOverSpeed"   
		     android:title="超速报警"   
		     android:summary="当前车辆行驶速度超过设定值，报警提醒"  
		     android:defaultValue="120"
		     android:dialogTitle="超速报警值"   
		     android:entries="@array/OverSPeedAlarmTitle"   
		     android:entryValues="@array/OverSPeedAlarmValue">  
		</ListPreference>  
		
		<ListPreference   
		     android:key="AlarmFatigueDriving"   
		     android:title="疲劳驾驶报警"   
		     android:summary="当前连续行驶时间超过设定值，报警提醒"  
		     android:defaultValue="120"
		     android:dialogTitle="疲劳驾驶报警值"   
		     android:entries="@array/FaitugeDrvingAlarmTitle"   
		     android:entryValues="@array/FaitugeDrvingAlarmValue">  
		</ListPreference>  
		
		<ListPreference   
		     android:key="AlarmVlotMin"   
		     android:title="电瓶电压报警"   
		     android:summary="当前车辆电瓶电压超过设定值，报警提醒"  
		     android:dialogTitle="电瓶电压报警值"   
		     android:defaultValue="15.5"
		     android:entries="@array/VoltAlarmTitle"   
		     android:entryValues="@array/VoltAlarmValue">  
		</ListPreference>  	
    </PreferenceCategory>
    <PreferenceCategory android:title="版本信息" >  
        <PreferenceScreen
		     android:key="Version"   
		     android:title="OBD行车电脑 "   
		     android:summary="V1.0"  
            
            ></PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>
